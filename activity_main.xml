<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="info.shaneferrell.rps.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score:"
        android:textSize="25dp"
        android:id="@+id/staticScoreText" />

    <!-- Score -->
    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"

        android:text=""
        android:textSize="30sp"
        android:gravity="center"

        android:id="@+id/scoreText"
        android:layout_below="@+id/staticScoreText"
        android:layout_alignStart="@+id/staticScoreText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rounds:"
        android:textSize="25dp"
        android:id="@+id/staticRoundText"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/scoreText" />

    <!-- Rounds -->
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"

        android:text=""
        android:textSize="30sp"
        android:gravity="center"

        android:id="@+id/roundText"
        android:layout_below="@+id/staticRoundText"
        android:layout_alignStart="@+id/staticRoundText" />

    <!-- Rock -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Rock"
        android:textSize="15sp"
        android:background="@color/colorText"
        android:minWidth="100dip"

        android:id="@+id/rockBut"
        android:layout_alignTop="@+id/paperBut"
        android:layout_alignParentStart="true" />

    <!-- Paper -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Paper"
        android:textSize="15sp"
        android:background="@color/colorText"
        android:minWidth="100dip"

        android:id="@+id/paperBut"
        android:layout_below="@+id/staticRoundText"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true" />

    <!-- Scissors -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Scissors"
        android:textSize="15sp"
        android:background="@color/colorText"
        android:minWidth="100dip"

        android:id="@+id/scissorsBut"
        android:layout_alignBottom="@+id/paperBut"
        android:layout_alignEnd="@+id/staticRoundText" />

    <!-- Status -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text=""
        android:textSize="22sp"

        android:id="@+id/statusText"
        android:layout_marginTop="350dp"
        android:layout_centerHorizontal="true" />

    <!-- View Scores -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="View Scores"
        android:textSize="15sp"
        android:background="@color/colorText"
        android:minWidth="115dip"

        android:id="@+id/scoresBut"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="viewScores"/>

</RelativeLayout>
